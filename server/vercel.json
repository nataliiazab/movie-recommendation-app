{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/build" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)", 
      "dest": "/server/src/index.ts" 
    },
    {
      "src": "/(.*)", 
      "dest": "/client/$1" 
    }
  ]
}
